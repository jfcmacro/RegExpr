<?xml version="1.1" encoding="utf-8"?>

<project name="expr" default="compile">
<!-- Author: Juan Francisco Cardona McCormick
     Date: August 28, 2012
     -->
  <description>
  </description>

  <property name="src"         location="src"/>
  <property name="build"       location="bin"/>
  <property name="RegExprPackage" value="co/edu/eafit/dis/st0270/regexpr"/>

  <target name="init" >
    <!-- Create a timestamp -->
    <tstamp/>
    <mkdir dir="${build}"/>
  </target>

  <target name="compile" depends="init"
	  description="source files are compiled">
    <javac srcdir="${src}" destdir="${build}"/>
  </target>

  <target name="run" depends="compile">
    <echo message=""/>
    <java classname="Main"
          classpath="${build}"/>
  </target>

  <target name="clean"
	  description="limpia todo">
    <!-- Borra el Ã¡rbol de directorios ${build} -->
    <delete dir="${build}"/>
    <delete>
      <fileset dir="." includes="**/*.java~"/>
    </delete>
  </target>

</project>
